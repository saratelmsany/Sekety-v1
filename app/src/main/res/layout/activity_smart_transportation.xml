<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background">

    <ImageView
        android:src="@drawable/logodark2"
        android:layout_width="662dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:id="@+id/logo" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:weightSum="1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



    <AutoCompleteTextView
        android:id="@+id/Tsource"
        android:layout_marginLeft="35dp"
        android:layout_width="250dp"
        android:layout_height="50dp"

        android:ellipsize="start"
        android:gravity="center"
        android:hint="From"
        android:background="@drawable/edittextlayout"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="38dp" />
    <AutoCompleteTextView
        android:id="@+id/Tdestination"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="55dp"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="To"

        android:background="@drawable/edittextlayout"
        android:layout_below="@+id/destination"
        android:layout_alignLeft="@+id/Tsource"
        android:layout_alignStart="@+id/Tsource"
         />
    </LinearLayout>


    <Button
        android:id="@+id/Bbusroutes"
        android:text="Buses"
        android:textSize="20dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:background="@drawable/shape"
        android:layout_weight="0.04"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/Bmetro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/Bmetro"
        android:text="Metros"
        android:textSize="20dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:background="@drawable/shape"
        android:layout_marginRight="25dp"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp" />

</RelativeLayout>